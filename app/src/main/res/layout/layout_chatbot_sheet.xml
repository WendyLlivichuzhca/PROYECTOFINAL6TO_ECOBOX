<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F2">

    <!-- CABECERA PREMIUM (Verde Marca) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2D5A40"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/ivBotIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_leaf"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ivBotIcon"
                android:text="EcoBot - Asistente"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnClearChat"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_glass"
                    android:src="@drawable/ic_delete"
                    android:padding="8dp"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnCloseChat"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_glass"
                    android:src="@drawable/ic_launcher_foreground"
                    android:padding="4dp"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- LISTA DE MENSAJES (Ãngulo amplio) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

    <!-- ÃREA DE CONTROL (Igual al Web) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Sugerencias RÃ¡pidas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Preguntas rÃ¡pidas:"
            android:textColor="#D97706"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="12dp">
            
            <LinearLayout
                android:id="@+id/llChatSuggestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Se llenarÃ¡ dinÃ¡micamente con botones -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Selector de Plantas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#F9F9F9">
            
            <Spinner
                android:id="@+id/spinnerChatPlants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingStart="12dp" />
        </androidx.cardview.widget.CardView>

        <!-- Entrada de Texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etChatMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:hint="Pregunta sobre tus plantas..."
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="15sp"
                android:textColor="#333333" />

            <ImageButton
                android:id="@+id/btnSendChat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/shape_pill_green"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Footer Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStatPlants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ± 0 plantas"
                android:textColor="#757575"
                android:textSize="11sp" />

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStatMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ 1 mensajes"
                android:textColor="#757575"
                android:textSize="11sp" />

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStatStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Listo"
                android:textColor="#10B981"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
