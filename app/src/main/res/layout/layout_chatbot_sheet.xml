<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F2">

    <!-- CABECERA PREMIUM (Verde Marca) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2D5A40"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/ivBotIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_leaf"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ivBotIcon"
                android:text="EcoBot - Asistente"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnClearChat"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_glass"
                    android:src="@drawable/ic_delete"
                    android:padding="8dp"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnCloseChat"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_glass"
                    android:src="@drawable/ic_close_chatbot"
                    android:padding="8dp"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- NUEVO: TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutChatbot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="#2E7D32"
        app:tabTextColor="#666666"
        app:tabIndicatorColor="#4CAF50"
        app:tabIndicatorHeight="3dp"
        app:tabTextAppearance="@style/ChatbotTabTextAppearance" />

    <!-- NUEVO: ViewPager2 para contenido de tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerChatbot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
