<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCF8"
    android:focusableInTouchMode="true">

    <!-- Gradiente de fondo con efecto wave -->
    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_gradient_green_waves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Elementos decorativos mÃ¡s sutiles -->
    <ImageView
        android:id="@+id/ivDecoration1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-20dp"
        android:alpha="0.25"
        android:contentDescription="DecoraciÃ³n planta"
        android:rotation="-15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_plant_decoration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/ivDecoration2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="160dp"
        android:alpha="0.2"
        android:contentDescription="DecoraciÃ³n hoja"
        android:rotation="25"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_leaf_decoration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Contenido del header -->
    <LinearLayout
        android:id="@+id/layoutHeaderContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TÃ­tulo y subtÃ­tulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.01"
                android:text="ðŸŒ¿ Mis Familias"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6dp"
                android:text="Comparte el cuidado de tus plantas con seres queridos"
                android:textColor="#E8F5E9"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Tarjeta de estadÃ­sticas mejorada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="#E8F5E9"
            app:strokeWidth="1dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Total Familias -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTotalFamilias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0"
                        android:textColor="#2E7D32"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Familias"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- LÃ­nea divisoria -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="#F0F0F0" />

                <!-- Total Miembros -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTotalMiembros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0"
                        android:textColor="#2E7D32"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Miembros"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acciÃ³n con mejor espaciado -->
        <LinearLayout
            android:id="@+id/containerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinFamily"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Unirse"
                android:textColor="#2E7D32"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@drawable/ic_group_add"
                app:iconPadding="8dp"
                app:iconTint="#2E7D32"
                app:strokeColor="#2E7D32"
                app:strokeWidth="1.5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateFamily"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#2E7D32"
                android:text="Crear"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@drawable/ic_add_circle"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView con mejor espaciado y sombras -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFamilies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeaderContent"
        tools:listitem="@layout/item_family" />

    <!-- Estado de carga mejorado -->
    <LinearLayout
        android:id="@+id/loadingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="#F8FCF8"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeaderContent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="36dp"
            app:cardElevation="4dp"
            app:strokeColor="#E8F5E9"
            app:strokeWidth="1dp">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateTint="#2E7D32"
                android:padding="18dp" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cargando familiasâ€¦"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Estado vacÃ­o mejorado -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeaderContent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.6"
            android:contentDescription="Icono familia vacÃ­a"
            android:src="@drawable/ic_empty_family"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No tienes familias aÃºn"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="Crea tu primera familia o Ãºnete a una existente para compartir el cuidado de tus plantas"
            android:textColor="#999999"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2E7D32"
            android:text="Crear Mi Primera Familia"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_add" />
    </LinearLayout>

    <!-- FAB mejorado (solo visible cuando hay scroll) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddQuick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#2E7D32"
        android:text="Nueva Familia"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>