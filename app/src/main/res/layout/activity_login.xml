<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipChildren="false"
    tools:context=".presentacion.ui.LoginActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_leaves"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#20000000"
        app:layout_constraintTop_toTopOf="@id/ivBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvWelcome"
                android:text="¡Hola de nuevo!"
                android:textSize="32sp"
                android:textColor="#2D5A40"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Ingresa a tu cuenta"
                android:textSize="14sp"
                android:textColor="#A0A0A0"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_exact"
                    android:hint="Correo electrónico"
                    android:paddingStart="50dp"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:textColor="#2D5A40"
                    android:textColorHint="#8E9E93"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    app:tint="#49755B"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etLoginPass"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_exact"
                    android:hint="••••••••"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:textColor="#2D5A40"
                    android:textColorHint="#8E9E93"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    app:tint="#49755B"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:id="@+id/btnTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye_visibility"
                    app:tint="#49755B"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="16dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/btnRememberMeContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivRememberCheck"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_circle_outline"
                        app:tint="#A0A0A0"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:text="Recordarme"
                        android:textColor="#A0A0A0"
                        android:textSize="12sp"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnGoToForgot"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#2D5A40"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="Iniciar Sesión"
                android:backgroundTint="#2D5A40"
                android:textSize="16sp"
                app:cornerRadius="30dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <LinearLayout
                android:id="@+id/layoutFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp">
                <TextView
                    android:text="¿No tienes cuenta? "
                    android:textColor="#A0A0A0"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/btnGoToRegister"
                    android:text="Regístrate"
                    android:textStyle="bold"
                    android:textColor="#2D5A40"
                    android:layout_marginStart="4dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivWave"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_exact"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@id/containerForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_circle_decor"
        android:backgroundTint="#D9FFFFFF"
        android:src="@drawable/ic_back_arrow"
        android:padding="12dp"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLeaf"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-50dp"
        android:elevation="4dp"
        android:rotation="-15"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_plant"
        app:layout_constraintBottom_toBottomOf="@id/ivWave"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>