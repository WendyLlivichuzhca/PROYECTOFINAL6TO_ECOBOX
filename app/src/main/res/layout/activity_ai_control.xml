<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAF9">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FAF9"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back_arrow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel de Control IA"
                android:textColor="#111827"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestión de EcoBox IA"
                android:textColor="#111827"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administra el motor de inteligencia artificial que supervisa y automatiza tu ecosistema."
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp"/>

            <!-- Estado del Sistema IA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado del Sistema"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp"/>

                    <!-- Monitoreo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        
                        <ImageView
                            android:id="@+id/ivMonitStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#10B981"/>
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Servicio de Monitoreo"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvMonitStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVO"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Scheduler -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivSchedStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#10B981"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Programador de Riegos"
                            android:textColor="#374151"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvSchedStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVO"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Modelos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivModelStatus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_brain"
                            app:tint="#6366F1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Modelos Entrenados"
                            android:textColor="#374151"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvModelStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 de 0 plantas"
                            android:textColor="#6366F1"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Acciones de Control -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controles"
                android:textColor="#111827"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartAi"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Iniciar Motor IA"
                app:icon="@drawable/ic_check_circle"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:backgroundTint="#10B981"
                android:elevation="0dp"
                android:layout_marginBottom="12dp"
                app:rippleColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStopAi"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Detener Motor IA"
                app:icon="@drawable/ic_delete"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:backgroundTint="#EF4444"
                android:elevation="0dp"
                android:layout_marginBottom="12dp"
                app:rippleColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetrainAi"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Reentrenar Modelos"
                app:icon="@drawable/ic_history"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:backgroundTint="#6366F1"
                android:elevation="0dp"
                android:layout_marginBottom="24dp"
                app:rippleColor="#FFFFFF" />

            <!-- Progress Indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/loadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="#10B981"
                app:trackColor="#E5E7EB"
                android:layout_marginBottom="12dp"/>

            <!-- ✅ SPRINT 3: Métricas de IA -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métricas del Modelo"
                android:textColor="#111827"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Accuracy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Precisión (Accuracy)"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96.5%"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Precision -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Precision"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvPrecision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94.2%"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Recall -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recall"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvRecall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95.8%"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- F1 Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="F1 Score"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvF1Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95.0%"
                            android:textColor="#10B981"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Total Predictions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total de Predicciones"
                            android:textColor="#374151"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:id="@+id/tvTotalPredictions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,234"
                            android:textColor="#6366F1"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ SPRINT 3: Estado de Entrenamiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de Entrenamiento"
                android:textColor="#111827"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTrainingStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado: No disponible"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <ProgressBar
                        android:id="@+id/trainingProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:max="100"
                        android:visibility="gone"
                        android:progressTint="#10B981"
                        android:progressBackgroundTint="#E5E7EB"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Info Alert -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EFF6FF">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bulb"
                        app:tint="#3B82F6"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Qué hace la IA de EcoBox?"
                            android:textColor="#1E40AF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Analiza sensores en tiempo real.\n• Predice necesidades de riego.\n• Activa automatismos inteligentes.\n• Aprende de tus hábitos de cuidado."
                            android:textColor="#1E40AF"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
