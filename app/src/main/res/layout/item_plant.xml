<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/eco_border"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono Circular -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#E8F5E9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_leaf"
                app:tint="@color/eco_primary"/>
        </FrameLayout>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Tomate Cherry"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvStatusBadge"/>

        <!-- Especie -->
        <TextView
            android:id="@+id/tvPlantSpecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Solanum lycopersicum"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/tvPlantName"
            app:layout_constraintTop_toBottomOf="@id/tvPlantName"
            app:layout_constraintEnd_toEndOf="@id/tvPlantName"/>

        <!-- Estado (PÃ­ldora Verde/Roja) -->
        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Saludable"
            android:textSize="11sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_stat_card"
            android:backgroundTint="@color/status_healthy"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>