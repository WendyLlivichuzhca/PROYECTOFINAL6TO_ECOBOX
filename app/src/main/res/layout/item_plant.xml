<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- PARTE SUPERIOR: IMAGEN + INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Contenedor Imagen + Punto Estado -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPlantImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_leaf"
                    android:background="@drawable/bg_stat_card"
                    android:backgroundTint="#F5F5F5"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    app:tint="@color/eco_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Punto de Estado -->
                <View
                    android:id="@+id/viewStatusDot"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/status_healthy"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toEndOf="@id/ivPlantImage"
                    app:layout_constraintTop_toTopOf="@id/ivPlantImage"
                    android:layout_marginEnd="-4dp"
                    android:layout_marginTop="-4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Info y Sensores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- Título y Ubicación -->
                <TextView
                    android:id="@+id/tvPlantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Monstera Deliciosa"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">
                    <!-- Icono pin map -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="#757575"/>
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Sala Principal"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Grid de Sensores -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Humedad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/ivHumIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_droplet"
                            app:tint="#212121"/>
                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="65%"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <!-- Luz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_sun"
                            app:tint="#FFA726"/>
                        <TextView
                            android:id="@+id/tvLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="80%"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <!-- Temperatura -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_thermometer"
                            app:tint="#25C6DA"/>
                        <TextView
                            android:id="@+id/tvTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="24°C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- PARTE INFERIOR: NIVEL DE AGUA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- CORRECCIÓN AQUÍ: Quitamos justifyContent y usamos layout_weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nivel de agua"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvWaterLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="50%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
            </LinearLayout>

            <!-- Barra de Progreso Custom -->
            <ProgressBar
                android:id="@+id/progressWater"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/custom_progress_bg"
                android:progress="50"
                android:max="100"/>

            <TextView
                android:id="@+id/tvLastWatered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Último riego: Hace 2 días"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>