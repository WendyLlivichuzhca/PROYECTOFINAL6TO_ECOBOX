<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_base"
    android:layout_marginHorizontal="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/corner_radius_2xl"
    app:cardElevation="@dimen/elevation_md"
    app:cardBackgroundColor="@color/surface_primary"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlantImage"
            android:layout_width="@dimen/avatar_size_xl"
            android:layout_height="@dimen/avatar_size_xl"
            android:src="@drawable/bg_leaves"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageSquare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saludable"
            android:textSize="@dimen/text_size_caption"
            android:textStyle="bold"
            android:textColor="@color/success_700"
            android:background="@drawable/bg_badge_success"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_xs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Monstera Deliciosa"
            android:textSize="@dimen/text_size_subtitle"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginEnd="@dimen/spacing_sm"
            app:layout_constraintStart_toEndOf="@id/ivPlantImage"
            app:layout_constraintEnd_toStartOf="@id/tvStatusBadge"
            app:layout_constraintTop_toTopOf="@id/ivPlantImage"/>

        <ImageView
            android:id="@+id/iconPin"
            android:layout_width="@dimen/icon_size_xs"
            android:layout_height="@dimen/icon_size_xs"
            android:src="@drawable/ic_location_pin"
            app:tint="@color/text_tertiary"
            android:layout_marginTop="@dimen/spacing_sm"
            app:layout_constraintStart_toStartOf="@id/tvPlantName"
            app:layout_constraintTop_toBottomOf="@id/tvPlantName"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sala Principal"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="@dimen/spacing_xs"
            app:layout_constraintStart_toEndOf="@id/iconPin"
            app:layout_constraintTop_toTopOf="@id/iconPin"
            app:layout_constraintBottom_toBottomOf="@id/iconPin"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/spacing_base"
            app:layout_constraintTop_toBottomOf="@id/ivPlantImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/containerSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_base"
            android:baselineAligned="false"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_droplet"
                    app:tint="#3B82F6"/>
                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="65%"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:text="Humedad"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sun"
                    app:tint="#F59E0B"/>
                <TextView
                    android:id="@+id/tvLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="80%"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:text="Luz"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_thermometer"
                    app:tint="#EF4444"/>
                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24Â°C"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:text="Temp"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sensor"
                    app:tint="#3B82F6"/>
                <TextView
                    android:id="@+id/tvSensorCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="65%"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:text="Sensores"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanque de agua"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerSensors"/>

        <TextView
            android:id="@+id/tvWaterPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50%"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#3B82F6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/lblWater"/>

        <ProgressBar
            android:id="@+id/progressWater"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:progressDrawable="@drawable/custom_progress_bg"
            android:progress="50"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/lblWater"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>