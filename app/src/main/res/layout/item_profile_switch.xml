<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_base"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivSwitchIcon"
        android:layout_width="@dimen/icon_size_md"
        android:layout_height="@dimen/icon_size_md"
        android:src="@drawable/ic_notifications"
        app:tint="@color/primary_600" />

    <TextView
        android:id="@+id/tvSwitchLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_base"
        android:text="Switch Label"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_body" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:thumbTint="@color/brand_green"
        app:trackTint="@color/primary_100" />
</LinearLayout>
