<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_gradient_white"
        android:padding="20dp">

        <View
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_pill_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="#2E7D32"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvFamilyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Familia EcoBox"
            android:textColor="#1A1C1E"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tvRoleBadge"
            app:layout_constraintStart_toEndOf="@id/cardIcon"
            app:layout_constraintTop_toTopOf="@id/cardIcon" />

        <TextView
            android:id="@+id/tvRoleBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_green_soft"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Admin"
            android:textColor="#2E7D32"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFamilyName" />

        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tvFamilyName"
            app:layout_constraintTop_toBottomOf="@id/tvFamilyName">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_user_group"
                app:tint="#8E9199" />

            <TextView
                android:id="@+id/tvMembersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="3 miembros"
                android:textColor="#8E9199"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="â€¢"
                android:textColor="#D1D5DB"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_leaf"
                app:tint="#8E9199" />

            <TextView
                android:id="@+id/tvPlantsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="8 plantas"
                android:textColor="#8E9199"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_code_tag"
            android:letterSpacing="0.1"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="ECO-123-BOX"
            android:textColor="#2E7D32"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/cardIcon"
            app:layout_constraintTop_toBottomOf="@id/cardIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>