<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_tertiary">

    <!-- HEADER BACKGROUND -->
    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_header_curved" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_5xl">

            <!-- TOP SPACE FOR HEADER CONTENT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_xl"
                android:paddingTop="@dimen/spacing_4xl"
                android:paddingBottom="@dimen/spacing_base">

                <TextView
                    android:id="@+id/tvProfileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Perfil"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvProfileTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvProfileTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- MAIN PROFILE CARD (OVERLAPPING) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_base"
                app:cardCornerRadius="@dimen/corner_radius_xl"
                app:cardElevation="@dimen/elevation_md"
                app:cardBackgroundColor="@color/surface_primary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xl">

                    <!-- AVATAR WITH RING EFFECT -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAvatarFrame"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="@color/primary_50"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/primary_200"
                            app:strokeWidth="2dp">

                            <TextView
                                android:id="@+id/tvAvatarInitials"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="U"
                                android:textColor="@color/brand_green"
                                android:textSize="@dimen/text_size_display"
                                android:textStyle="bold" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivProfilePhoto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/default_avatar"
                                android:visibility="gone" />
                        </com.google.android.material.card.MaterialCardView>


                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvProfileNameDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_base"
                        android:text="Nombre Apellido"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_badge_success"
                        android:paddingHorizontal="@dimen/spacing_md"
                        android:paddingVertical="@dimen/spacing_xs">
                        
                        <TextView
                            android:id="@+id/tvUserRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuario"
                            android:textColor="@color/success_700"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_caption" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Miembro desde: Dic 2025"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- STATS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_base"
                android:paddingHorizontal="@dimen/spacing_base"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- Helper function to avoid repeat boilerplate in my mind, but writing out here -->
                <!-- PLANTAS -->
                <include layout="@layout/item_profile_stat" android:id="@+id/statPlantas" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="@dimen/spacing_xs" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statSensores" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="@dimen/spacing_xs" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statFamilias" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="@dimen/spacing_xs" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statIA" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
            </LinearLayout>

            <!-- SECTION: ACCOUNT INFO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginHorizontal="@dimen/spacing_xl"
                android:text="Informaci贸n de la Cuenta"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_small"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginHorizontal="@dimen/spacing_base"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_none"
                app:cardBackgroundColor="@color/surface_primary"
                app:strokeColor="@color/border_secondary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- EMAIL ITEM -->
                    <include layout="@layout/item_profile_info" android:id="@+id/itemEmail" />
                    <View style="@style/Widget.EcoBox.Divider" android:layout_marginHorizontal="@dimen/spacing_base" />
                    
                    <!-- PHONE ITEM -->
                    <include layout="@layout/item_profile_info" android:id="@+id/itemPhone" />
                    <View style="@style/Widget.EcoBox.Divider" android:layout_marginHorizontal="@dimen/spacing_base" />
                    
                    <!-- FAMILY ITEM -->
                    <include layout="@layout/item_profile_info" android:id="@+id/itemFamily" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: APP SETTINGS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginHorizontal="@dimen/spacing_xl"
                android:text="Ajustes de la Aplicaci贸n"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_small"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginHorizontal="@dimen/spacing_base"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_none"
                app:cardBackgroundColor="@color/surface_primary"
                app:strokeColor="@color/border_secondary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- NOTIFICATIONS -->
                    <include layout="@layout/item_profile_switch" android:id="@+id/itemNotifications" />
                    <View style="@style/Widget.EcoBox.Divider" android:layout_marginHorizontal="@dimen/spacing_base" />
                    
                    <!-- DARK MODE -->
                    <include layout="@layout/item_profile_switch" android:id="@+id/itemDarkMode" />
                    
                    <!-- JOIN FAMILY (HIDDEN BY DEFAULT) -->
                    <LinearLayout
                        android:id="@+id/layoutUnirseFamilia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_base"
                        android:visibility="gone">
                        
                        <View style="@style/Widget.EcoBox.Divider" android:layout_marginBottom="@dimen/spacing_base" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text=" Unirse a familia"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_body" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/etCodigoFamilia"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/input_height_sm"
                                android:layout_weight="1"
                                android:background="@drawable/bg_input_exact"
                                android:hint="C贸digo de invitaci贸n"
                                android:inputType="text"
                                android:paddingHorizontal="@dimen/spacing_base"
                                android:textSize="@dimen/text_size_body" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUnirseFamilia"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height_sm"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="Unirse"
                                style="@style/Widget.EcoBox.Button.Primary"
                                android:minHeight="0dp"
                                android:paddingVertical="0dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:layout_marginHorizontal="@dimen/spacing_base"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActionEditProfile"
                    style="@style/Widget.EcoBox.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_lg"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    android:layout_weight="1"
                    android:text="锔 Editar" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCambiarPassword"
                    style="@style/Widget.EcoBox.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_lg"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_weight="1"
                    android:text=" Clave" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActionLogout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_lg"
                android:layout_marginTop="@dimen/spacing_base"
                android:layout_marginHorizontal="@dimen/spacing_base"
                android:text=" Cerrar Sesi贸n"
                android:backgroundTint="@color/error_500"
                style="@style/Widget.EcoBox.Button.Primary" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>