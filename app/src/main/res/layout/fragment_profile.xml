<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- HEADER DECORATIVO INTERACTIVO -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_curved" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="32dp"
            android:paddingBottom="100dp">

            <!-- CABECERA SUPERIOR -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                
                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Perfil"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackToDashboard"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="â† Volver"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <!-- 1. BLOQUE DE IDENTIDAD (AVATAR & BIO) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAvatarFrame"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/brand_green">
                        <TextView
                            android:id="@+id/tvAvatarInitials"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="@color/white"
                            android:textSize="42sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvProfileNameDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Nombre Usuario"
                        android:textColor="#111827"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUsernameDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textColor="#6B7280"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:padding="16dp"
                        android:background="@drawable/bg_stat_card"
                        android:gravity="center">
                        
                        <TextView
                            android:id="@+id/tvMainUserBio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ¨ Cargando biografÃ­a..."
                            android:textColor="#4B5563"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="italic" />
                        
                        <TextView
                            android:id="@+id/tvMemberSince"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="ðŸ“… Miembro EcoBox"
                            android:textColor="#9CA3AF"
                            android:textSize="11sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2. BLOQUE DE ESTADÃSTICAS (MINIMALIST GRID) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="16dp">
                
                <include layout="@layout/item_profile_stat" android:id="@+id/statPlantas" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statMediciones" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_marginBottom="8dp" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statRiegos" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:layout_marginEnd="8dp" />
                <include layout="@layout/item_profile_stat" android:id="@+id/statSemanas" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" />
            </GridLayout>

            <!-- 3. CONFIGURACIÃ“N PERSONAL (FORMULARIO) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤ Datos de la Cuenta"
                            android:textColor="#111827"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnToggleEditMode"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="EDITAR"
                            android:textColor="@color/brand_green"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="8dp" />
                    </RelativeLayout>

                    <!-- INPUTS FLOTANTES -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Nombre"
                        app:boxStrokeColor="@color/brand_green"
                        app:hintTextColor="@color/brand_green"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProfileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#1F2937" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Apellido"
                        app:boxStrokeColor="@color/brand_green"
                        app:hintTextColor="@color/brand_green">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProfileLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#1F2937" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Email (No editable)"
                        android:alpha="0.7">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProfileEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#6B7280" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="TelÃ©fono"
                        app:boxStrokeColor="@color/brand_green"
                        app:hintTextColor="@color/brand_green">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProfilePhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="phone"
                            android:textColor="#1F2937" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- BOTONES GUARDAR/CANCELAR -->
                    <LinearLayout
                        android:id="@+id/layoutActionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelChanges"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:text="Cancelar"
                            android:textColor="#EF4444" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveChanges"
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_weight="1.6"
                            android:text="Guardar Cambios"
                            app:cornerRadius="12dp"
                            app:backgroundTint="@color/brand_green" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. AJUSTES DINÃMICOS Y SEGURIDAD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸ Preferencias y Seguridad"
                        android:textColor="#111827"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- FILA DE BOTONES DE PERSONALIZACIÃ“N -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        
                        <LinearLayout
                            android:id="@+id/btnMainChangeAvatarColor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/bg_stat_card"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_palette"
                                app:tint="@color/brand_green"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Estilo Avatar"
                                android:textSize="12sp"
                                android:textColor="#4B5563"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnMainChangeBio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/bg_stat_card"
                            android:clickable="true"
                            android:focusable="true">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_refresh"
                                app:tint="@color/brand_green"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Refrescar Bio"
                                android:textSize="12sp"
                                android:textColor="#4B5563"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- BOTONES DE ACCIÃ“N FINAL -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNavChangePassword"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Cambiar ContraseÃ±a"
                        app:icon="@drawable/ic_lock"
                        app:cornerRadius="12dp"
                        android:textColor="#4B5563"
                        app:strokeColor="#E5E7EB" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNavLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Cerrar SesiÃ³n Activa"
                        app:icon="@drawable/ic_logout"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#EF4444" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>