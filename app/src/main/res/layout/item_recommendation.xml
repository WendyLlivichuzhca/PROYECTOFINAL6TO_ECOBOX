<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F8FAF9">

            <ImageView
                android:id="@+id/ivRecIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_water_drop"
                app:tint="#059669" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvRecType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIORIDAD ALTA"
                android:textColor="#059669"
                android:textSize="11sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/tvRecMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regar 'Suculenta MÃ­a' - Humedad al 20%"
                android:textColor="#111827"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvRecTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detectado hace 2 horas"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#E5E7EB" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
