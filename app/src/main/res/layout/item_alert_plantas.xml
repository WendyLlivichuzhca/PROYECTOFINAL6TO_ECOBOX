<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Icono de Alerta -->
        <FrameLayout
            android:id="@+id/flIconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_glass"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvAlertEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸš¨"
                android:textSize="20sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAlertTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Alerta CrÃ­tica"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/vUnreadDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_circle_red"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAlertPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ Suculenta"
                android:textColor="#374151"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvAlertMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humedad muy baja (20%). Riegue de inmediato."
                android:textColor="#4B5563"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAlertTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hace 5 min"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnResolveAlert"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="RESOLVER"
                    android:textSize="11sp"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="#059669" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>