<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#E2E8F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Dot -->
        <View
            android:id="@+id/badgeNoLeido"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icon -->
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_notification"
            app:layout_constraintStart_toEndOf="@id/badgeNoLeido"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#3B82F6" />

        <!-- Type Name Badge -->
        <TextView
            android:id="@+id/txtTipoBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_badge_info_light"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="INFO"
            android:textColor="#3B82F6"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgIcono"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            app:layout_constraintTop_toTopOf="@id/imgIcono" />

        <!-- Time -->
        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 ene. 23:11"
            android:textColor="#64748B"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Message -->
        <TextView
            android:id="@+id/txtMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Usuario ahora es Administrador en la familia la familia"
            android:textColor="#1E293B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgIcono"
            app:layout_constraintTop_toBottomOf="@id/imgIcono" />

        <TextView
            android:id="@+id/txtRelativeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hace 4 horas"
            android:textColor="#94A3B8"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/txtMensaje"
            app:layout_constraintTop_toBottomOf="@id/txtMensaje" />

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarcarLeidaItem"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="12dp"
            android:text="Marcar como leÃ­da"
            android:textAllCaps="false"
            android:textColor="#059669"
            android:textSize="11sp"
            app:backgroundTint="#D1FAE5"
            app:cornerRadius="6dp"
            app:icon="@drawable/ic_check_circle"
            app:iconSize="14dp"
            app:iconTint="#059669"
            app:layout_constraintStart_toStartOf="@id/txtMensaje"
            app:layout_constraintTop_toBottomOf="@id/txtRelativeTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
