<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCF8">

    <!-- Header con gradiente y patrones de hojas -->
    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_gradient_green_leaves"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DecoraciÃ³n de plantas (mÃ¡s sutil) -->
    <ImageView
        android:id="@+id/ivLeafDecoration"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-25dp"
        android:alpha="0.12"
        android:rotation="-10"
        android:src="@drawable/ic_leaf_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Contenido del header -->
    <LinearLayout
        android:id="@+id/layoutHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Barra superior con botÃ³n atrÃ¡s y acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:rippleColor="#E8F5E9">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow"
                    app:tint="#2E7D32" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦ Miembros"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                tools:text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦ Miembros" />

            <!-- BotÃ³n de compartir/invitar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnShare"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:rippleColor="#E8F5E9">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share"
                    app:tint="#2E7D32" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- InformaciÃ³n de la familia -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#E8F5E9"
            app:strokeWidth="1dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hogar: Mi Familia"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="Hogar: Los RodrÃ­guez" />

                <TextView
                    android:id="@+id/tvFamilyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_code_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="CÃ³digo: ECO-ABC-123"
                    android:textColor="#2E7D32"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="CÃ³digo: ECO-ABC-123" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_person"
                            app:tint="#2E7D32" />

                        <TextView
                            android:id="@+id/tvMembersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="5 miembros"
                            android:textColor="#2E7D32"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="5 miembros" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_plant"
                            app:tint="#2E7D32" />

                        <TextView
                            android:id="@+id/tvPlantsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="12 plantas"
                            android:textColor="#2E7D32"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="12 plantas" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Lista de miembros con mejor espaciado -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMembers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:nestedScrollingEnabled="true"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="120dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderBackground"
        tools:listitem="@layout/item_member" />

    <!-- BotÃ³n flotante para invitar (mejor posicionado) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#2E7D32"
        android:text="Invitar Miembro"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_person_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Estado vacÃ­o mejorado -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderBackground">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.6"
            android:src="@drawable/ic_empty_family"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No hay miembros aÃºn"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="Invita a familiares o amigos para compartir el cuidado de las plantas"
            android:textColor="#999999"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInviteNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2E7D32"
            android:text="Invitar Ahora"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>