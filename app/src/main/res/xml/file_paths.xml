<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Directorio externo para imágenes -->
    <external-files-path
        name="my_images"
        path="Pictures/" />

    <!-- Directorio externo para documentos -->
    <external-files-path
        name="my_documents"
        path="Documents/" />

    <!-- Directorio de caché -->
    <cache-path
        name="my_cache"
        path="/" />

    <!-- Directorio de archivos internos -->
    <files-path
        name="my_files"
        path="/" />

    <!-- Directorio de archivos externos públicos -->
    <external-path
        name="external_storage_root"
        path="." />

    <!-- Directorio específico para fotos de la app -->
    <external-files-path
        name="plant_photos"
        path="Android/data/com.example.proyectofinal6to_ecobox/files/Pictures/" />
</paths>