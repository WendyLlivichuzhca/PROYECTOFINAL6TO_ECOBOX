<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ========================================= -->
    <!-- BASE WIDGET STYLE -->
    <!-- ========================================= -->
    
    <!-- Estilo base requerido por Android para la jerarquÃ­a Widget.EcoBox.* -->
    <style name="Widget.EcoBox" parent=""/>
    
    <!-- ========================================= -->
    <!-- TEXT APPEARANCES -->
    <!-- ========================================= -->
    
    <!-- Display Styles -->
    <style name="TextAppearance.EcoBox.Display" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Heading Styles -->
    <style name="TextAppearance.EcoBox.Heading1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.EcoBox.Heading2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.EcoBox.Heading3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.EcoBox.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body_lg</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.EcoBox.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.EcoBox.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextAppearance.EcoBox.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- ========================================= -->
    <!-- CARD STYLES -->
    <!-- ========================================= -->
    
    <style name="Widget.EcoBox.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_lg</item>
        <item name="cardElevation">@dimen/elevation_none</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="strokeColor">@color/border_primary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.EcoBox.Card.Elevated" parent="Widget.EcoBox.Card">
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.EcoBox.Card.Outlined" parent="Widget.EcoBox.Card">
        <item name="cardElevation">@dimen/elevation_none</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.EcoBox.Card.Filled" parent="Widget.EcoBox.Card">
        <item name="cardElevation">@dimen/elevation_none</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- ========================================= -->
    <!-- BUTTON STYLES -->
    <!-- ========================================= -->
    
    <style name="Widget.EcoBox.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/corner_radius_3xl</item>
        <item name="android:minHeight">@dimen/button_height_lg</item>
        <item name="android:textSize">@dimen/text_size_body_lg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.EcoBox.Button.Primary" parent="Widget.EcoBox.Button">
        <item name="backgroundTint">@color/brand_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">@dimen/elevation_sm</item>
    </style>

    <style name="Widget.EcoBox.Button.Secondary" parent="Widget.EcoBox.Button">
        <item name="backgroundTint">@color/primary_100</item>
        <item name="android:textColor">@color/brand_green</item>
        <item name="elevation">@dimen/elevation_none</item>
    </style>

    <style name="Widget.EcoBox.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="strokeColor">@color/brand_green</item>
        <item name="android:textColor">@color/brand_green</item>
        <item name="android:minHeight">@dimen/button_height_md</item>
    </style>

    <style name="Widget.EcoBox.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/brand_green</item>
    </style>

    <!-- ========================================= -->
    <!-- CHIP / BADGE STYLES -->
    <!-- ========================================= -->
    
    <style name="Widget.EcoBox.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">@dimen/corner_radius_md</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.EcoBox.Chip.Success" parent="Widget.EcoBox.Chip">
        <item name="chipBackgroundColor">@color/success_100</item>
        <item name="android:textColor">@color/success_700</item>
    </style>

    <style name="Widget.EcoBox.Chip.Warning" parent="Widget.EcoBox.Chip">
        <item name="chipBackgroundColor">@color/warning_100</item>
        <item name="android:textColor">@color/warning_700</item>
    </style>

    <style name="Widget.EcoBox.Chip.Error" parent="Widget.EcoBox.Chip">
        <item name="chipBackgroundColor">@color/error_100</item>
        <item name="android:textColor">@color/error_700</item>
    </style>

    <style name="Widget.EcoBox.Chip.Info" parent="Widget.EcoBox.Chip">
        <item name="chipBackgroundColor">@color/info_100</item>
        <item name="android:textColor">@color/info_700</item>
    </style>

    <!-- ========================================= -->
    <!-- FAB STYLES -->
    <!-- ========================================= -->
    
    <style name="Widget.EcoBox.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/brand_green</item>
        <item name="tint">@color/white</item>
        <item name="elevation">@dimen/elevation_lg</item>
    </style>

    <!-- ========================================= -->
    <!-- DIVIDER STYLES -->
    <!-- ========================================= -->
    
    <style name="Widget.EcoBox.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Widget.EcoBox.Divider.Vertical" parent="Widget.EcoBox.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- ========================================= -->
    <!-- SHAPE APPEARANCES -->
    <!-- ========================================= -->
    
    <style name="ShapeAppearance.EcoBox.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_sm</item>
    </style>

    <style name="ShapeAppearance.EcoBox.MediumComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_md</item>
    </style>

    <style name="ShapeAppearance.EcoBox.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_lg</item>
    </style>

</resources>
