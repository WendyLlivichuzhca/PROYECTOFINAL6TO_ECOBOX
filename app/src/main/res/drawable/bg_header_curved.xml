<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con gradiente verde -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_700"
                android:centerColor="@color/primary_800"
                android:endColor="@color/primary_900"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Overlay decorativo -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:endColor="@android:color/transparent"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>